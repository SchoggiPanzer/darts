{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="container text-center">
    <form class="aadl-login-form" action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
        {% endif %}

        <img src="{{ asset('build/images/flight.c979b430.png') }}" width="72" height="72" alt=""
             class="mb-4">

        <h1>Login</h1>

        <label class="sr-only" for="username">{{ 'security.login.username'|trans }}</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required"
               autocomplete="username" placeholder="{{ 'security.login.username'|trans }}"/>

        <label class="sr-only" for="password">{{ 'security.login.password'|trans }}</label>
        <input type="password" id="password" name="_password" required="required" autocomplete="current-password"
               placeholder="{{ 'security.login.password'|trans }}"/>

        <input class="btn btn-lg btn-primary" type="submit" id="_submit" name="_submit"
               value="{{ 'security.login.submit'|trans }}"/>
    </form>
</div>

